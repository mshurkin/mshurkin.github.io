<html>
    <head>
        <title>Hello World!</title>
        <script>
            function href() {
                window.location.href="https://petrovich.ru";
            }
            function replace() {
                window.location.replace("https://petrovich.ru");
            }
          </script>
    </head>
    <body>
        <p>Hello World!</p>
        <a href="https://petrovich.ru">Link</a>
        <input type="button" value="href" onclick="href()">
        <input type="button" value="replace" onclick="replace()">
    </body>
</html>